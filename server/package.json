{
  "name": "server",
  "version": "0.0.1",
  "description": "Server part for code-demonstartion project",
  "main": "dist/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BjornReinhard/code-demonstration.git"
  },
  "author": "Daniil Stepanov",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prestart": "tsc && yarn --cwd ../frontend build && ncp ../frontend/build build",
    "start": "cross-env HTTPS=true PORT=443 pm2 start ecosystem.config.js --no-daemon --env production",
    "dev": "yarn run prestart && cross-env pm2 start ecosystem.config.js --no-daemon --env production",
    "tsc": "tsc"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "pm2": "^4.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.10",
    "cross-env": "^7.0.2",
    "ncp": "^2.0.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2"
  }
}
